<Window x:Class="GenealogyTree.AddPartnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenealogyTree"
        mc:Ignorable="d"
        Title="{DynamicResource AddPartnerWindowTitle}" Height="450" Width="800">

    <StackPanel>
        <Label Content="{DynamicResource AddPartnerWindowChildName}" Width="250" />
        <ComboBox x:Name="ChildCombobox" HorizontalContentAlignment="Center" Width="250" />
        <Label Content="{DynamicResource AddPartnerWindowPartnerNameLabel}" Width="250" />
        <TextBox x:Name="PartnerName" Width="250"/>
        <Label Content="{DynamicResource AddPartnerWindowPartnerBirthDateLabel}" Width="250"/>
        <TextBox x:Name="PartnerBirthDate" Width="250"/>
        <Label Content="{DynamicResource AddPartnerWindowPartnerDeathDateLabel}" Width="250"></Label>
        <TextBox x:Name="PartnerDeathDate" Width="250"/>
        <Label Content="{DynamicResource AddPartnerWindowPartnerBirthPlaceLabel}" Width="250"></Label>
        <TextBox x:Name="PartnerBirthPlace" Width="250" Margin="0,0,0,25"></TextBox>
        <Button Content="{DynamicResource AddPartnerWindowButton}" Click="AddButton_Click" Width="250"/>
    </StackPanel>
</Window>
