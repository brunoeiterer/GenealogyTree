<Window x:Class="GenealogyTree.RemoveChildWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenealogyTree"
        mc:Ignorable="d"
        Title="{DynamicResource RemoveChildWindowTitle}" Height="450" Width="800">

    <StackPanel>
        <Label Content="{DynamicResource RemoveChildWindowChildLabel}" Width="250" />
        <ComboBox x:Name="ChildCombobox" HorizontalContentAlignment="Center" Width="250" Margin="0, 0, 0, 25"/>
        <Button Content="{DynamicResource RemoveChildWindowButton}" Click="RemoveChildButton_Click" Width="250"/>
    </StackPanel>
</Window>
